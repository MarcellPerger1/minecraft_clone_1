{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns":[
    "**/libs/**"
  ],
  "globals":{
    "mat4": "readonly",
    "vec3": "readonly",
    "progress": "writable"
  },
  "rules": {
    "no-unused-vars": ["warn", {
      "varsIgnorePattern": "^_",
      "argsIgnorePattern": "^_"
    }],
    "array-bracket-newline": ["warn", {
      "multiline": true,
      "minItems": null
    }],
    "array-bracket-spacing": ["warn", "never"],
    "array-element-newline": ["warn", {
      "multiline": true
    }],
    "arrow-parens": ["warn", "always"],
    "arrow-spacing": ["warn", {
      "before": true, "after": true
    }]
  }
}
